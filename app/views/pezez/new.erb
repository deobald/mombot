
<div>
  <h1>hello</h1>

  <% form_for @pez do |f| %>

  <div>
    <%= f.label :identity, "identity:" %>
    <%= f.text_field :identity %>
  </div>

  <div>
    <%= f.label :colour, "colour:" %>
    <%= f.hidden_field :colour, :value => @pez.colour %>
    <span style='background-color: <%= @pez.colour %>;'>&nbsp;.&nbsp;.&nbsp;.&nbsp;</span>
  </div>

  <div>
    <%= submit_tag 'add me to the dispenser, please!' %>
  </div>

  <% end %>
</div>
